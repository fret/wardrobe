    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">
    <android.support.v4.view.ViewPager
        android:id="@+id/topViewPager"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/bottomViewPager"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    </LinearLayout>
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/bottomAddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        fab:fab_colorNormal="@color/colorPrimary"
        app:fab_icon="@drawable/ic_add_white_24dp"/>
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/topAddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        fab:fab_colorNormal="@color/colorPrimary"
        app:fab_icon="@drawable/ic_add_white_24dp"/>
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/shuffleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        fab:fab_colorNormal="@color/colorPrimary"
        app:fab_icon="@drawable/ic_autorenew_white_24dp"/>
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/favouriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        fab:fab_colorNormal="@color/colorPrimary"
        app:fab_icon="@drawable/ic_favorite_white_24dp"/>
</RelativeLayout>